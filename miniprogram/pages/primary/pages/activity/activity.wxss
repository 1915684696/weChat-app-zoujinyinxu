/* miniprogram/pages/activity/activity.wxss */
page{
  background-color: #f5f5f5;
  padding: 0 50rpx;
  box-sizing:border-box;
}
.fu{
  display:flex;
  height: 30px;
  justify-content: center;
  align-items: center;
}
.time{
  padding: 0 3px;
  background-color: #c9c8c8;
  color: white;
  font-size: 12px;
  border-radius: 3px;
}

.item{
  box-sizing:border-box;
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 20px;
  background-color: white;
  z-index: 0;
  overflow: hiddden;
}
.title_text{
  line-height: 40px;
  size: 13px;
}
.main_img{
  width: 100%;
}
.img{
  width: 100%;
  height: 230rpx;
}
.main_text{
  font-size: 12px;
  line-height: 15px;
  margin-top: 10rpx;
  color: rgb(160, 158, 158);
}
.hr{
  margin-top:20rpx;
  width: 100%;
  height: 2rpx;
  background-color: #D8D8D8;
}
.more{
  height: 30px;
  overflow: hidden;
}
.more_text{
  float: left;
  font-size: 12px;
  line-height: 30px;
  color: #A9A9A9;
}
.more_sign{
  float: right;
  line-height: 30px;
  font-size: 12px;
  color: #A9A9A9;
}