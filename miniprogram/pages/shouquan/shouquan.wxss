
.con{
  display: flex;
  margin-top: 200rpx;
  width: 750rpx;
  box-sizing:border-box;
  justify-content: center;
  align-items: center;
}
.icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.img{
  width: 150rpx;
  height: 150rpx;
  float: left;
}
.text{
  width: 100%;
  height: 30px;
  margin-top: 10px;
  text-align: center;
  font-size: 16px;
  line-height: 30px;
}
.btn_view{
  height: 40px;
  margin-top: 20px;
  justify-content: center;
  width: 100%;
  overflow: hidden;
}
.btn{
  width: 60%;
  height: 40px;
  border-radius: 20px;
  background: rgb(32, 212, 47);
  color: white;
  font-size: 14px;
  line-height: 40px
}